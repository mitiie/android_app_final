<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="28dp"
    tools:context=".HomeActivity">

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Search..."
        android:drawableLeft="@drawable/ic_search"
        android:background="@drawable/bg_search"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Label Categories -->
    <TextView
        android:id="@+id/tvCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/edtSearch"
        app:layout_constraintStart_toStartOf="@id/edtSearch" />

    <!-- Danh sách Categories (2 hàng) -->
    <LinearLayout
        android:id="@+id/categoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvCategories"
        app:layout_constraintStart_toStartOf="@id/tvCategories">

        <!-- Hàng 1: 3 nút -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- COFFEE -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_category_button"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_coffee" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COFFEE"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- DESSERTS -->
            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_category_button"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_desserts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DESSERTS"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <!-- ALCOHOL -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_category_button"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_wine" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALCOHOL"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hàng 2: 2 nút -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_category_button"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_tea" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEA"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/bg_category_button"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_bread" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BREAKFAST"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/categoryLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_home" />

</androidx.constraintlayout.widget.ConstraintLayout>