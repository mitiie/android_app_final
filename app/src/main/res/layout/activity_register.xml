<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".authenticate.RegisterActivity">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/register_backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/registerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:lines="2"
        android:text="Welcome to Coffee Shop!"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Email Label -->
    <TextView
        android:id="@+id/register_emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email or phone number"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="140dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/registerText"
        app:layout_constraintStart_toStartOf="@+id/register_emailInput" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/register_emailInput"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_background"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="45dp"
        app:layout_constraintTop_toBottomOf="@id/register_emailLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password Label -->
    <TextView
        android:id="@+id/register_passwordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/register_emailInput"
        app:layout_constraintStart_toStartOf="@id/register_emailLabel" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/register_passwordInput"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_background"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/register_passwordLabel"
        app:layout_constraintStart_toStartOf="@id/register_emailInput"
        app:layout_constraintEnd_toEndOf="@id/register_emailInput" />

    <!-- Confirm Password Label -->
    <TextView
        android:id="@+id/register_confirmPasswordLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/register_passwordInput"
        app:layout_constraintStart_toStartOf="@id/register_passwordLabel" />

    <!-- Confirm Password Input -->
    <EditText
        android:id="@+id/register_confirmPasswordInput"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@drawable/edittext_background"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/register_confirmPasswordLabel"
        app:layout_constraintStart_toStartOf="@id/register_passwordInput"
        app:layout_constraintEnd_toEndOf="@id/register_passwordInput" />

    <!-- Login Link -->
    <TextView
        android:id="@+id/register_loginLink"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Already have an account? Login"
        android:textColor="#562B1A"
        android:textSize="16sp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/register_confirmPasswordInput"
        app:layout_constraintEnd_toEndOf="@id/register_confirmPasswordInput" />

    <!-- Register Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_registerButton"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:text="Register"
        android:textSize="18dp"
        android:background = "@drawable/bg_order_check"
        android:textColor="#FFFFFF"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/register_loginLink"
        app:layout_constraintStart_toStartOf="@id/register_confirmPasswordInput"
        app:layout_constraintEnd_toEndOf="@id/register_confirmPasswordInput" />

</androidx.constraintlayout.widget.ConstraintLayout>
